<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/classify_drawnred"
            android:gravity="center"
            android:lines="3"
            android:paddingBottom="21dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="21dp"
            android:text="山不在高，有仙则灵，水不在深，有龙则灵，斯是陋室，惟吾德馨。"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/theme"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="7/40"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Mine"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/people_num"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="2天前"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/classify_lightgray"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>